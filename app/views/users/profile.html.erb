<h1 id="nav_item">Profile</h1>

<%= form_with model: current_user, url: users_update_profile_path, method: :post do |f|%>
  <% if @errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @errors %>
    </div>
  <% end %>
  
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar %>
  <% end %>

  <div class="form-group mt-3" id="nav_item">
    <label for="email">Avatar</label>
    <%= f.file_field :avatar, class: 'form-control w-75' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="email">First Name:</label>
    <%= f.text_field :first_name, class: 'form-control w-75' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="last_name">Last Name:</label>
    <%= f.text_field :last_name, class: 'form-control w-75' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="last_name">Age:</label>
    <%= f.text_field :age, class: 'form-control w-75' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="gender">Gender:</label>
    <%= f.select :gender, ['male', 'female'], class: 'form-control w-75' %>
  </div>
  <div class="container mb-3">
    <%= f.submit 'Update', class: 'btn btn-primary', id: "update" %>
  </div>
<% end %>

<style>
  .container {
    position: relative;
    width: 70%;
  }

  #update {
    position: absolute;
    left: 20%;
  }
</style>