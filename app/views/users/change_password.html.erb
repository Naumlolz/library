<h1 id="nav_item">Change password</h1>

<span class="navbar-text" id="nav_item">
  Hello, <%= current_user.first_name %> <%= current_user.last_name %>
</span>
<%= form_with url: users_update_password_path, method: :post do |f|%>
  <% if @errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @errors %>
    </div>
  <% end %>
  
  <div class="form-group mt-1" id="nav_item">
    <label for="email">Old password:</label>
    <%= f.text_field :old_password, class: 'form-control w-50' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="password">New password:</label>
    <%= f.password_field :new_password, class: 'form-control w-50' %>
  </div>

  <div class="form-group mt-3" id="nav_item">
    <label for="password">Confirm new password:</label>
    <%= f.password_field :new_password_confirmation, class: 'form-control w-50' %>
  </div>
  <%= f.submit 'Save changes', class: 'btn btn-success mt-3'%>
<% end %>

<style>
  .navbar-text {
    padding-bottom: 10px;
  }
</style>