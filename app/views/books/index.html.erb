<h1>Books</h1>
<div class="row">
  <% @books.each do |book|%>
  <div class="card" style="width: 18rem;">
    <% if book.avatar.attached? %>
      <%= image_tag book.avatar %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= book.title %></h5>
      <%= link_to 'Continue', book_path(id: book.id),
                method: :get, class: 'btn btn-dark'%>
    </div>
  </div>
  <% end %>
</div>