<h1 class="text-center" id="nav_item"><%= pluralize(@books.count, 'Result') %></h1>

<div class="container mt-4">
  <table class= "table table-info">
    <thead>
      <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :description, "Description") %></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book|%>
        <tr>
          <td><%= link_to book.title, book%></td>
          <td><%= book.description.truncate_words(25)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>