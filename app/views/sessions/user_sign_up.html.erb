<h1 id="nav_item">Sign up as User</h1>
<%= form_with url: users_sign_up_path, method: :post do |f|%>
  <% if @errors.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @errors %>
    </div>
  <% end %>
  <div class="form-group w-50" id="nav_item">
    <label for="first_name">First Name:</label>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'name' %>
  </div>

  <div class="form-group w-50" id="nav_item">
    <label for="last_name">Last Name:</label>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'last name' %>
  </div>
  
  <div class="form-group w-50" id="nav_item">
    <label for="email">Email address:</label>
    <%= f.text_field :email, class: 'form-control', placeholder: "example@mail.ru" %>
  </div>
  
  <div class="form-group w-50" id="nav_item">
    <label for="password">Password:</label>
    <%= f.password_field :password, class: 'form-control', placeholder: "enter password" %>
  </div>

  <div class="form-group w-50" id="nav_item">
    <label for="confirm_password">Confirm Password:</label>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "enter password confirmation" %>
  </div>
  <%= f.submit 'Sign up', class: 'btn btn-primary mt-2'%>
<% end %>